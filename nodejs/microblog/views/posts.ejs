<% posts.forEach(function (post, index) {
    if (index % 3 === 0) { %>
        <div class="row">
    <% } %>
        <div class="col-md-4 card">
            <div class="card-body">
            <h3>@ <a href="/u/<%= post.user %>"><%= post.user %></a></h3>
            <p><small><%= post.time %></small></p>
            <p><%= post.post %></p>
        </div>
        </div>
    <% if (index % 3 === 2) { %>
        </div><!-- end row -->
    <% } %>
<% }) %>
<% if (posts.length % 3 !== 0) { %>
    </div><!-- end row -->
<% } %>
    
