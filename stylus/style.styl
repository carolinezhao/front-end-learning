border-radius(val)
  -webkit-border-radius: val
  -moz-border-radius: val
  border-radius: val

border(color)
  border: 1px solid color

section
  font: 14px/1.5 Helvetica, arial, sans-serif
  #box
    border(#4D8CF8)
    border-radius(5px)
  button
  input[type='button']
    border(#4D8CF8)
    cursor: pointer
    border-radius(5px)
    &:hover
      background-color: #4D8CF8
      color: #fff

#prompt
  background-color: #4D8CF8
  color: #fff
  width: w = 300px
  height: (w / 3)
  margin: (@width / 100)

table
  for row in 1 2 3 4 5
    tr:nth-child({row})
      height: 10px * row
  for row in 1 3 5
    tr:nth-child({row})
      color: #4D8CF8
